{% extends 'base.html.twig' %}

{% block title %}Registro - Stockify{% endblock %}

{% block body %}
<!-- loader Start -->
<div id="loading">
    <div id="loading-center">
    </div>
</div>
<!-- loader END -->

<div class="wrapper">
    <section class="login-content">
        <div class="container">
            <div class="row align-items-center justify-content-center height-self-center">
                <div class="col-lg-8">
                    <div class="card auth-card">
                        <div class="card-body p-0">
                            <div class="d-flex align-items-center auth-content">
                                <div class="col-lg-7 align-self-center">
                                    <div class="p-3">
                                        <h2 class="mb-2">Nuevo registro</h2>
                                        {{ form_start(form) }}
                                            <div class="errors alert alert-danger d-none">
                                            {{ form_errors(form.username) }}
                                            {{ form_errors(form.password) }}
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(form.username) }}
                                                        {{ form_label(form.username) }}
                                                        {# <input class="floating-input form-control" type="text" placeholder=" ">
                                                        <label>Usuario</label> #}
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(form.password) }}
                                                        {{ form_label(form.password) }}
                                                        {# <input class="floating-input form-control" type="password" placeholder=" ">
                                                        <label>Contraseña</label> #}
                                                    </div>
                                                </div>   
                                            </div>
                                            {{ form_row(form.submit) }}
                                            {# <button type="submit" class="btn btn-primary">Crear cuenta</button> #}
                                            <p class="mt-3">
                                                ¿Ya tienes una cuenta? <a href="{{ path('user_login') }}" class="text-primary">Accede a Stockify</a>
                                            </p>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                                <div class="col-lg-5 content-right">
                                    <img src="{{ asset('assets/images/login/01.png') }}" class="img-fluid image-right" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Backend Bundle JavaScript -->
<script src="{{ asset('assets/js/backend-bundle.min.js') }}"></script>

<!-- app JavaScript -->
<script src="{{ asset('assets/js/app.js') }}"></script>
{% endblock %}

{% block javascripts %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
    $(document).ready(function(){
        if($('.errors').children().length > 0){
            $('.errors').removeClass('d-none');
        }
    });
</script>
{% endblock %}